{
	"name": "filmaster-server",
	"version": "1.0.0",
	"description": "",
	"main": "src/app.ts",
	"scripts": {
		"watch": "tsc -w",
		"dev": "nodemon dist/index.js",
		"startTs": "npx ts-node src/server.ts",
		"devTs": "nodemon --exec ts-node src/server.ts",
		"build": "cd frontend && pnpm run build",
		"install-client": "cd frontend && pnpm install",
		"heroku-postbuild": "pnpm run install-client && pnpm run build",
		"server": "nodemon src/server.ts",
		"develop": "concurrently --kill-others-on-fail \"pnpm run server\" \"pnpm run start --prefix backend\"",
		"start": "concurrently --kill-others-on-fail \"pnpm run server\" \"pnpm run dev --prefix frontend\""
	},
	"dependencies": {
		"@types/express": "^4.17.17",
		"@types/mongoose": "^5.11.97",
		"@types/node": "*",
		"concurrently": "^8.2.0",
		"dotenv": "^16.0.3",
		"envalid": "^7.3.1",
		"express": "^4.18.2",
		"http-errors": "^2.0.0",
		"mongoose": "^7.2.0",
		"nodemon": "^2.0.22",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.4"
	},
	"devDependencies": {
		"@types/http-errors": "^2.0.1",
		"@types/morgan": "^1.9.4",
		"morgan": "^1.10.0"
	}
}